{
	"name": "aqua-rpc",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"start": "node dist/index.js",
		"dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
		"compile-aqua": "aqua -i ./aqua/ -o ./src/_aqua",
		"watch-aqua": "chokidar \"**/*.aqua\" -c \"npm run compile-aqua\"",
		"dev-once": "npx tsc && node dist/index.js",
		"generate-zod-schema": "for file in src/_aqua/*.ts; do filename=$(basename $file .ts); schema_file=$(echo $filename.\"schema.ts\"); npx ts-to-zod $file src/middleware/$schema_file; done"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@fluencelabs/aqua": "^0.9.4",
		"@fluencelabs/fluence": "^0.28.0",
		"@fluencelabs/fluence-network-environment": "^1.0.14",
		"body-parser": "^1.20.2",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"json-rpc-2.0": "^1.5.1",
		"uninstall": "^0.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@fluencelabs/aqua-lib": "^0.6.0",
		"@types/express": "^4.17.17",
		"@types/node": "^18.15.11",
		"concurrently": "^8.0.1",
		"nodemon": "^2.0.22",
		"ts-to-zod": "^3.0.0",
		"typescript": "^5.0.4"
	}
}
